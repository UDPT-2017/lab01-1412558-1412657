<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                    <p>
                        <strong>id</strong>: <%= user.id %><br>
                        <strong>name</strong>: <%= user.name %><br>
                        <strong>email</strong>: <%= user.email %><br>
                        <strong>phone</strong>: <%= user.phone %><br>
                        <strong>password</strong>: <%= user.pwuser %><br>
                        <img class="media-object" src="<%= user.avatar %>" alt="no avatar" style="width: 30px; height: 30px">
                        <strong>FB tokken</strong>: <%= user.facebook_token %><br>
                        <strong>FB id</strong>: <%= user.facebook_id %><br>
                        <strong>FB Link</strong>: <%= user.facebook_link %><br>
                    </p>

            </div>
        </div>

        <!-- FACEBOOK INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>



            </div>
        </div>

    </div>

</div>
</body>
</html>